{
    "tabWidth": 4,
    "overrides": [
        { "files": "*.css", "options": { "tabWidth": 4 } },
        { "files": "*.html", "options": { "tabWidth": 4 } }
    ],
    "semi": true,
    "singleQuote": false,
    "jsxSingleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "endOfLine": "lf"
}
